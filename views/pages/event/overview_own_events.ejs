<div class="plaincontainer">
  <h2>Ãœbersicht Ihrer Events</h2>
<div class="grid-container431">
  <% events.forEach(function(event){ %>
    <div class="grid-item431">
      <div class="overviewOwnName">
        <%= event.name %>
      </div>
      <% if(event.image) { %>
        <div class="overviewImg">
          <img class="overviewPartyImage" src="/images/events/<%= event.image %>" />
        </div>
        <% } %>
        <div class="overviewData">Name: <%= event.name %>
        </div>
          <div class="overviewData">Datum: <%= event.date %>
          </div>
          <br>
          <div class="overviewOwnButtons">
            <form class="overviewForm" action="/event/<%=event.id%>">
              <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
              <input type ="hidden" value="<%=event.id%>" name="eventId"/>
              <input class="overviewOwnButton" type="submit" value="Eventdetails" name="detail" />
            </form>
            <form class="overviewForm" action="/event/promote/<%=event.id%>">
              <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
              <input class="overviewOwnButton" type="submit" value="Jetzt Promoten" name="detail " />
            </form>
          </div>
    </div>
    <% }); %>
</div>
</div>
