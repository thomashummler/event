<div class ="plaincontainer-login">
  <div id="login" v-cloak>
    <div class="container-fluid container-login pt-5 pb-5">
      <h1 class="text-center">Melden sie sich hier an</h1>
      <div style="max-width: 450px;" class="mx-auto">
        <hr/>
        <ajax-form action="login" :syncing.sync="syncing" :cloud-error.sync="cloudError" :form-data="formData" :form-rules="formRules" :form-errors.sync="formErrors" @submitted="submittedForm()">
          <div class="form-group">
            <input type="email" class="form-control" placeholder="E-Mail Adresse" :class="[formErrors.emailAddress ? 'is-invalid' : '']" v-model.trim="formData.emailAddress" autocomplete="email" focus-first>
            <div class="invalid-feedback" v-if="formErrors.emailAddress">Bitte Passwort eingeben.</div>
          </div>
          <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" :class="[formErrors.password ? 'is-invalid' : '']" v-model.trim="formData.password" autocomplete="current-password">
            <div class="invalid-feedback" v-if="formErrors.password">Bitte Passwort eingeben.</div>
          </div>
          <div class="form-group form-check">
            <input class="form-check-input" type="checkbox" id="remember" name="rememberMe" v-model="formData.rememberMe"/>
            <label class="form-check-label" for="remember">Anmeldedaten speichern.</label>
          </div>
          <cloud-error v-if="cloudError==='badCombo'">Ihre Eingaben passen zu keinem registrierten Account. Bitte prÃ¼fen sie ihre E-Mail oder das Passwort und versuchen sie es erneut.</cloud-error>
          <cloud-error v-else-if="cloudError"></cloud-error>
          <div class="form-group">
            <ajax-button :syncing="syncing" class="btn-dark btn-lg btn-block login-button">Einloggen</ajax-button>
          </div>
        </ajax-form>
        <p class="text-center">Sie haben Ihr Passwort vergessen? Klicken sie  <a href="/password/forgot"> hier</a>.</p>
      </div>
    </div>
  </div>
  <%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>

</div>
